<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:layout_width="fill_parent"
	android:layout_height="fill_parent" android:background="@color/green"
	android:gravity="center_horizontal">
	<ScrollView android:id="@+id/RelativeLayout"
		android:layout_width="fill_parent" android:layout_height="wrap_content"
		android:visibility="visible" android:layout_weight="1">
		<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
			android:orientation="vertical" android:layout_height="wrap_content"
			android:background="@color/green" android:id="@+id/LinearLayout01"
			android:layout_width="wrap_content" android:gravity="center_horizontal">
			<ImageView android:id="@+id/ImageView01"
				android:layout_width="wrap_content" android:layout_height="wrap_content"
				android:src="@drawable/logo" android:scaleType="center"
				android:padding="5dp" android:scrollbarAlwaysDrawVerticalTrack="false"
				android:scrollbarAlwaysDrawHorizontalTrack="false"></ImageView>
			<LinearLayout android:id="@+id/LinearLayout02"
				android:layout_width="wrap_content" android:layout_height="wrap_content">
				<TextView android:id="@+id/version" android:gravity="center"
					android:layout_width="wrap_content" android:layout_height="wrap_content"
					android:text="@string/about_version" android:textSize="@dimen/twotwo_sp"
					android:textColor="@color/white"></TextView>
				<TextView android:id="@+id/TextView02"
					android:layout_width="wrap_content" android:layout_height="wrap_content"
					android:text="  "></TextView>
				<TextView android:id="@+id/version" android:gravity="center"
					android:layout_width="wrap_content" android:paddingBottom="10dp"
					android:layout_height="wrap_content" android:text="@string/version"
					android:textSize="@dimen/twotwo_sp" android:textColor="@color/white"></TextView>
			</LinearLayout>
			<TextView android:id="@+id/TextView01" android:layout_width="wrap_content"
				android:layout_height="wrap_content" android:text="@string/aboutusheader"
				android:textStyle="bold" android:textSize="@dimen/twofour_sp"
				android:textColor="@color/white"></TextView>
			<TextView android:id="@+id/aboutus1" android:layout_width="wrap_content"
				android:layout_height="wrap_content" android:textSize="@dimen/twozero_sp"
				android:paddingLeft="10dp" android:paddingRight="10dp"
				android:paddingTop="10dp" android:text="@string/aboutus1"
				android:gravity="left" android:textColor="@color/white"></TextView>
			<TextView android:id="@+id/aboutus2" android:layout_width="wrap_content"
				android:layout_height="wrap_content" android:textSize="@dimen/twozero_sp"
				android:paddingLeft="10dp" android:paddingRight="10dp"
				android:paddingTop="10dp" android:text="@string/aboutus2"
				android:gravity="left" android:textColor="@color/white"></TextView>
			<TextView android:id="@+id/aboutus2_5" android:autoLink="web|email"
				android:layout_width="wrap_content" android:layout_height="wrap_content"
				android:textSize="@dimen/twozero_sp" android:gravity="center_horizontal"
				android:paddingLeft="10dp" android:paddingRight="10dp"
				android:paddingTop="10dp" android:text="@string/aboutus2_5"></TextView>
			<TextView android:id="@+id/aboutus2_6" android:layout_width="wrap_content"
        android:layout_height="wrap_content" android:textSize="@dimen/twozero_sp"
        android:paddingLeft="10dp" android:paddingRight="10dp"
        android:paddingTop="10dp" android:text="@string/aboutus2_6"
        android:gravity="left" android:textColor="@color/white"></TextView>
      <TextView android:id="@+id/aboutus2_7" android:autoLink="email"
        android:layout_width="wrap_content" android:layout_height="wrap_content"
        android:textSize="@dimen/twozero_sp" android:gravity="center_horizontal"
        android:paddingLeft="10dp" android:paddingRight="10dp"
        android:paddingTop="10dp" android:text="@string/aboutus2_7"></TextView>
			<TextView android:id="@+id/aboutus3" android:layout_width="wrap_content"
				android:layout_height="wrap_content" android:textSize="@dimen/twozero_sp"
				android:paddingLeft="10dp" android:paddingRight="10dp"
				android:paddingTop="10dp" android:gravity="left" android:text="@string/aboutus3"
				android:textColor="@color/white"></TextView>
			<TextView android:id="@+id/aboutus4" android:layout_width="wrap_content"
				android:layout_height="wrap_content" android:textSize="@dimen/twozero_sp"
				android:gravity="center_horizontal" android:paddingLeft="10dp"
				android:paddingRight="10dp" android:paddingTop="10dp" android:text="@string/aboutus4"
				android:textStyle="bold" android:textColor="@color/white"></TextView>
			<TextView android:id="@+id/credits" android:gravity="center"
				android:layout_width="wrap_content" android:layout_height="wrap_content"
				android:text="@string/credits" android:textSize="@dimen/twozero_sp"
				android:paddingLeft="10dp" android:paddingRight="10dp"
				android:paddingBottom="10dp" android:textColor="@color/white"></TextView>
		</LinearLayout>
	</ScrollView>
	<RelativeLayout android:id="@+id/RelativeLayout01"
		android:layout_width="wrap_content"
		android:layout_height="54dp">
		<ImageView android:layout_height="wrap_content" android:src="@drawable/line_portrait"
			android:layout_width="fill_parent" android:id="@+id/ImageView03"
			android:layout_alignParentTop="true"></ImageView>
		<ImageView android:id="@+id/ImageView02"
			android:layout_height="wrap_content" android:src="@drawable/line_portrait"
			android:layout_width="fill_parent" android:layout_below="@+id/ImageView03"
			android:paddingTop="2dp" android:paddingBottom="2dp"></ImageView>
		<Button android:id="@+id/Button01" android:layout_height="wrap_content"
			android:text="@string/done" android:visibility="visible"
			android:clickable="true" android:focusable="true"
			android:layout_alignParentRight="true" android:layout_width="75dp"
			android:layout_below="@+id/ImageView02"></Button>
	</RelativeLayout>
</LinearLayout>
